{
  "name": "bootstrap-app",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "postinstall": "cd backend && bun install && cd ../frontend && bun install",
    "start": "cd backend && bun run start",
    "dev": "cd backend && bun run dev",
    "dev:frontend": "cd frontend && bun run dev",
    "build:frontend": "cd frontend && bun run build",
    "db:migrate": "cd backend && bun run db:migrate",
    "migrate": "bun run db:migrate",
    "test": "cd backend && bun test --verbose && cd ../frontend && bun test --verbose",
    "test:backend": "cd backend && bun test",
    "test:frontend": "cd frontend && bun test",
    "typecheck": "cd frontend && bun run typecheck",
    "lint": "cd frontend && bun run lint",
    "lint:fix": "cd frontend && bun run lint:fix",
    "check": "bun run typecheck && bun run lint && bun run test"
  }
}
